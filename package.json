{
  "name": "profile-next",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build --turbopack",
    "start": "next start",
    "lint": "eslint",
    "// === PLAYWRIGHT (sin servidor) ===": "",
    "pw:unit": "playwright test --project=pw:unit",
    "pw:api": "playwright test --project=pw:api",
    "// === PLAYWRIGHT (necesita servidor) ===": "",
    "pw": "playwright test",
    "pw:component": "playwright test --project=pw:component",
    "pw:pages": "playwright test --project=pw:pages",
    "pw:integration": "playwright test --project=pw:integration",
    "pw:e2e": "playwright test --project=pw:e2e",
    "pw:cov": "nyc --silent playwright test",
    "// === COMBINADOS ===": "",
    "test:cov": "npm run pw:cov",
    "test:all": "npm run pw",
    "test:full": "npm run pw:cov && npm run perf && npm run perf:check",
    "// === LEGACY (deprecar gradualmente) ===": "",
    "test": "playwright test",
    "test:unit": "playwright test --project=pw:unit --project=pw:api",
    "test:server": "playwright test --project=pw:component --project=pw:pages --project=pw:integration --project=pw:e2e",
    "test:coverage": "nyc playwright test",
    "test:coverage:unit": "nyc --check-coverage playwright test --project=pw:unit --project=pw:api",
    "test:prod": "cross-env TEST_ENV=production npx playwright test",
    "// === LHCI ===": "",
    "perf": "lhci autorun --config=lighthouserc.perf.json",
    "perf:check": "node scripts/check-perf-thresholds.js",
    "perf:strict": "lhci autorun --config=lighthouserc.strict.json",
    "// === OTROS ===": "",
    "lh:home": "npx lighthouse http://localhost:3000/es --output=json --output=html --output-path=./docs/lighthouse-reports/home.html --chrome-flags='--headless' --no-enable-error-reporting"
  },
  "dependencies": {
    "@radix-ui/react-avatar": "^1.1.10",
