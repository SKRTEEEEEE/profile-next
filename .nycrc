{
  "all": true,
  "check-coverage": true,
  "lines": 70,
  "statements": 60,
  "functions": 80,
  "branches": 50,
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx"
  ],
  "exclude": [
    "**/*.spec.ts",
    "**/*.spec.tsx",
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/node_modules/**",
    "**/tests/**",
    "**/*.config.ts",
    "**/*.config.js",
    "**/dist/**",
    "**/.next/**"
  ],
  "reporter": [
    "text",
    "html",
    "lcov",
    "json-summary"
  ],
  "report-dir": "./docs/coverage-reports",
  "temp-dir": "./.nyc_output"
}
