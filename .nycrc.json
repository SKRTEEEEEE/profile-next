{
  "extension": [".ts", ".js"],
  "include": ["src/**/*.ts"],
  "exclude": ["tests/**"],
  "reporter": ["text", "lcov"],
  "all": true,
  "check-coverage": true,
  "lines": 80,
  "branches": 80,
  "functions": 80,
  "statements": 80,
  "use": {
    "baseURL": "http://localhost:3000"
  },
  "report-dir": "./docs/coverage-reports"
}
