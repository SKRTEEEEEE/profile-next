{
  "extension": [".ts", ".tsx", ".js", ".jsx"],
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/core/**/*.ts",
    "src/core/application/**/*.ts",
    "src/core/domain/**/*.ts",
    "src/core/infrastructure/**/*.ts",
    "src/lib/**/*.ts",
    "src/components/**/*.tsx"
  ],
  "exclude": [
    "tests/**",
    "**/*.spec.ts",
    "**/*.test.ts",
    "**/*.d.ts",
    "**/*.config.ts",
    "src/middleware.ts",
    "src/app/**"
  ],
  "reporter": ["text", "lcov", "html", "json-summary"],
  "all": true,
  "check-coverage": false,
  "lines": 60,
  "branches": 60,
  "functions": 60,
  "statements": 60,
  "report-dir": "./docs/coverage-reports",
  "temp-dir": "./.nyc_output"
}
