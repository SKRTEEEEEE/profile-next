{
  "ci": {
    "collect": {
      "url": [
        "http://localhost:3000/es",
        "http://localhost:3000/en/info",
        "http://localhost:3000/de/gradients",
        "http://localhost:3000/es/portafolio",
        "http://localhost:3000/ca/estudis"
      ],
      "numberOfRuns": 1,
      "startServerCommand": "npm run build && npm run start",
      "startServerReadyPattern": "ready on.*3000",
      "chromeFlags": "--headless"
    },
    "assert": {
      "assertions": {
        "categories:performance": ["error", { "minScore": 0.65 }],
        "categories:accessibility": ["error", { "minScore": 0.85 }],
        "categories:seo": ["error", { "minScore": 0.8 }],
        "categories:best-practices": ["error", { "minScore": 0.9 }],

        "bf-cache": "off",
        "legacy-javascript-insight": "warn",
        "forced-reflow-insight": "off",
        "network-dependency-tree-insight": "off",
        "document-title": "warn",
        "meta-description": "warn",
        "button-name": "warn"
      }
    },
    "upload": {
      "target": "filesystem",
      "outputDir": "./docs/lighthouse-reports/perf"
    }
  }
}
